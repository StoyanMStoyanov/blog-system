extends ./shared/layout
block heading
	h1= title

block main-content
	form(name='add-article' enctype='multipart/form-data' method='post' action'/arcticle/create')
		label Title:
		input(type='text' name='title')
		br
		label Description:
		input(type='text' name='description')
		br
		label Image:
		input(type='file' name='image')
		br
		input(type='submit' value='Create')